<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InformsActivity" android:visibility="visible">

    <com.github.mikephil.charting.charts.PieChart
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/pieChart"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" tools:visibility="visible">
    </com.github.mikephil.charting.charts.PieChart>
    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                android:fillViewport="true" app:layout_constraintTop_toBottomOf="@+id/pieChart"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible" tools:visibility="visible"
                android:id="@+id/scrollView"
    >


        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/pieChart"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tableID" android:visibility="visible" tools:visibility="visible"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0">

                <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:background="@drawable/cell_border">

                        <TextView
                                android:text="Temperatura dia"
                        />
                </TableRow>

            <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="Humedad"
                />
            </TableRow>

            <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="Litros agua/semana"

                />
            </TableRow>

            <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="mg Nitrogeno/semana"

                />
            </TableRow>

            <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="mg Fosforo/semana"

                />
            </TableRow>

            <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="mg Potasio/semana"

                />
            </TableRow>

            <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/cell_border">

                <TextView
                        android:text="Calcio semana"

                />
            </TableRow>





        </TableLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>